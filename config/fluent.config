<source>
  @type forward
  port 24224
  bind 0.0.0.0
</source>

<filter app.nginx>
  @type parser
  key_name log
  reserve_data true
  <parse>
    @type regexp
    expression /^(?<host>[^ ]*) \[(?<time>[^\]]*)\] "(?<method>\S+)(?: +(?<path>[^ ]*) +\S*)?" (?<code>[^ ]*) "host: (?<hostname>[^\"]*)" "size: (?<size>[^\"]*)" "referrer: (?<referrer>[^\"]*)" "user-agent: (?<user_agent>[^\"]*)"$/
    time_format %d/%b/%Y:%H:%M:%S %z
  </parse>
</filter>

<filter *.**>
  @type grep
  <exclude>
    key log
    pattern \"GET /metrics\ HTTP/1.1\" 200
  </exclude>
</filter>

<match *.**>
  @type copy
  <store>
    @type elasticsearch
    host elasticsearch
    port 9200
    logstash_format true
    logstash_prefix fluentd
    logstash_dateformat %Y%m%d
    include_tag_key true
    type_name fluentd
    tag_key @log_name
    flush_interval 1s
  </store>
  <store>
    @type stdout
  </store>
</match>
